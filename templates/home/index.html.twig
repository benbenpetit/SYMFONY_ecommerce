			{% for product in products %}
				<li class="product">
					<a href="{{ path('product', {'id': product.id}) }}">
						<div class="image" style="background-image: url({{ asset('build/images/' ~ product.imagePath) }})"></div>
						<div class="title">
							<span title="{{ product.name }}">{{ product.name }}</span>
							<span>{{ product.price }}â‚¬</span>
						</div>
					</a>
				</li>
			{% endfor %}
		</ul>
	</section>
{% endblock %}
